<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Login</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>

    <body>
        <div class="container">
            <h1>HOME</h1>
            <a class="btn btn-primary" href="/create" role="button">CREATE</a>
            <a class="btn btn-danger" href="/logout" style="float: right;">Cerrar Sesion</a>
        </div>  
        <hr>
        <div class="container">
            
            <form action="">
                <table class="table table-responsive-sme">
                    <thead>
                        <tr>
                            <th>P.NOMBRE</th>
                            <th>P.APELLIDO</th>
                            <th>S.APELLIDO</th>
                            <th>DIRECCION</th>
                            <th>TELEFONO</th>
                            <th>E-MAIL</th>
                            <th>OCUPACION</th>
                            <th>F. NACIMIENTO</th>
                            <th>OPERACION</th>
                        </tr>

                    </thead>

                    <tbody>
                        <%for (var i=0; i < tasks.length; i++) {%>
                            <tr>
                                <td><%= tasks[i].primer_nombre %></td>
                                <td><%= tasks[i].primer_apellido %></td>
                                <td><%= tasks[i].segundo_apellido %></td>
                                <td><%= tasks[i].direccion %></td>
                                <td><%= tasks[i].telefono %></td>
                                <td><%= tasks[i].email %></td>
                                <td><%= tasks[i].ocupacion %></td>
                                <td><%= tasks[i].nacimiento %></td>
                                <td><a class="btn btn-primary" href="/update/<%= tasks[i]._id%>">Update</a>
                                <a class="btn btn-danger" href="/delete/<%= tasks[i]._id%>">Delete</a></td>
                            </tr>
                        <%} %>
                    </tbody>
                </table>
            </form>
        </div>
    </body>
</html>